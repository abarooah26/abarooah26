1.//var request = new XMLHttpRequest();
request.open('GET','http://api.countrylayer.com/v2/currency/EUR?access_4f03db10a8d8c0591c13be106730a056);
request.send();
request.onload =function () {
    var data = JSON.parse(this.response); 
    for(i=0;i<data.length;i++) {
        console.log(data[i]);
    }   
} 


